<%= form_for(@notification) do |f| %>
  <% if @notification.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@notification.errors.count, "error") %> prohibited this notification from being saved:</h2>

      <ul>
      <% @notification.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
      <%= f.label :name %><br />
      <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label 'position on the screen' %><br />
    <%= f.select :position, [['position of bookmark', 1], ['position of item', 2], ['position of theme', 3],['position of new version']] %>
  </div>

    <div class="field">
      <%= f.label :description %><br />
      <%= f.text_area :description %>
    </div>

    <div class="field">
      <%= f.label :image_name %><br />
      <%= f.file_field :image_name %>
    </div>

    <div class="field">
      <%= f.hidden_field :user_id, :value => @current_user.id %>
    </div>




  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
