<h1>Listing items</h1>

<h3>
  <%= link_to 'New Item', new_item_path,  class: "btn btn-primary" %>
</h3>

<table class="table table-bordered">

  <tr>
    <th>Item Id</th>
    <th>Name</th>
    <th>Clickable</th>
    <th>Image name</th>
    <th>Priority order</th>

    <th></th>
    <th></th>
  </tr>

<% @items.each do |item| %>
  <tr>

    <td><%= item.id %></td>
    <td><%= item.name %></td>
    <td><%= item.clickable %></td>
    <td><%= cl_image_tag(item.image_name.url().to_s,width: 100, height:100) %></td>
    <td><%= item.priority_order %></td>
    <td><%= link_to 'Show', item  , class: "btn btn-primary" %> </td>
    <td><%= link_to 'Edit', edit_item_path(item), class: "btn btn-primary" %></td>
  </tr>
<% end %>
</table>


<br />


